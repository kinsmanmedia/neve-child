{
  "name": "neve-child/mac-whats-new",
  "title": "What's New at MAC?",
  "description": "Displays recent articles and news from the Mississauga Arts Council with customizable settings.",
  "category": "design",
  "icon": "admin-post",
  "keywords": ["news", "articles", "whats new", "mac", "posts", "recent"],
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "section_title": {
      "type": "string",
      "default": "What's New at MAC?"
    },
    "section_subtitle": {
      "type": "string",
      "default": "Stay up to date with the latest news, events, and announcements from the Mississauga Arts Council"
    },
    "posts_count": {
      "type": "number",
      "default": 6
    },
    "show_excerpt": {
      "type": "boolean",
      "default": true
    },
    "show_date": {
      "type": "boolean",
      "default": true
    },
    "show_author": {
      "type": "boolean",
      "default": false
    },
    "show_featured_image": {
      "type": "boolean",
      "default": true
    },
    "post_category": {
      "type": "string",
      "default": ""
    },
    "read_more_text": {
      "type": "string",
      "default": "Read More"
    },
    "view_all_text": {
      "type": "string",
      "default": "View All News"
    },
    "view_all_link": {
      "type": "string",
      "default": "/news"
    }
  },
  "editorScript": "mac-whats-new-block",
  "render": "file:./render.php"
}